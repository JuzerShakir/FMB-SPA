<form class="row gy-5 gx-3 mt-5">
  <div class="col-sm-3">
    <div class="input-group">
      <div class="input-group-text">Thaali #</div>
      <input type="text" class="form-control" placeholder="53">
    </div>
  </div>

  <div class="col-sm-5">
    <div class="input-group">
      <div class="input-group-text">Name</div>
      <input type="text" class="form-control" placeholder="Shk. Fakhruddin Nakhudawala">
    </div>
  </div>

  <div class="col-sm-2">
    <div class="input-group">
      <div class="input-group-text">Size</div>
        <select class="form-select">
          <option selected>Choose</option>
          <option value="0">Small</option>
          <option value="1">Medium</option>
          <option value="2">Large</option>
        </select>
    </div>
  </div>

  <div class="col-sm-2 d-flex justify-content-center">
    <button type="submit" class="btn btn-success">Create Thaali</button>
  </div>
</form>